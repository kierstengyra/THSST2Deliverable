<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:text="Evaluate another student"
        android:id="@+id/btnNextStudent"
        android:background="#179E9A"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="30sp"
        android:onClick="nextStudent"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_above="@+id/btnExit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:text="Exit App"
        android:background="#179E9A"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/btnExit"
        android:textSize="30sp"
        android:onClick="exit"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnNextStudent"
        android:layout_marginBottom="319dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores are recorded!\nWhat&apos;s the next step?"
        android:id="@+id/txtLastPrompt"
        android:textAlignment="center"
        android:textColor="#5D4F42"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" />
</RelativeLayout>