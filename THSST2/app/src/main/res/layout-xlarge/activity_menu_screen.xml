<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="Create Student Record"
        android:id="@+id/btnNewRecord"
        android:background="#179E9A"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="45sp"
        android:onClick="createRecord"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnNextStudent"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:text="Choose from list"
        android:id="@+id/btnNextStudent"
        android:background="#179E9A"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="45sp"
        android:onClick="selectRecord"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_marginBottom="340dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnNewRecord" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mary Help of Christians College - Salesian Sisters, Inc."
        android:id="@+id/txtSchoolName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:typeface="sans"
        android:textStyle="bold"
        android:background="#0B5D51"
        android:textColor="#FFFFFF"
        android:padding="15dp"
        android:textSize="38sp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to do next?"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_above="@+id/btnNewRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:textStyle="bold"
        android:textColor="#958F83" />
</RelativeLayout>

